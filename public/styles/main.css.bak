/* Global Styles */
*,
*::before,
*::after {
  box-sizing: border-box;
}

* {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

html,
body {
  height: 100vh;
  width: 100vw;
  line-height: 1.6;
  background-color: #000000aa;
  scrollbar-width: none;
}

main {
  position: relative;
  z-index: 2;
}

.particles {
  position: fixed;
  height: 100vh;
  width: 100vw;
  z-index: 1;
  padding: 0px;
}

/* Sections */
section {
  display: flex;
  height: 100vh;
  justify-content: center;
  align-items: center;
  color: #fff;
}

section h1 {
  font-size: 100px;
  margin: 0;
  z-index: 2;
}

/* Header */
header {
  z-index: 9999;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  /* Ensure it spans the width of the viewport */
  padding: 0 20px;
  /* Add some padding if needed */
}

/* Navigation Bar */
header #navbar {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 20px;
  padding: 0 20px;
  background-color: rgba(255, 255, 255, 0.03);
  border-radius: 160px;
  border: 1px solid rgba(255, 255, 255, 0.06);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  transition: 1s all cubic-bezier(0.075, 0.82, 0.165, 1) 0.2s;
}

header #navbar a {
  color: rgba(165, 165, 165, 0.963);
  text-decoration: none;
  font-weight: 700;
  display: block;
  padding: 10px 20px;
  line-height: 1;
  font-size: 15px;
  letter-spacing: 2px;
  text-transform: lowercase;
  transition: 0.3s all cubic-bezier(0.075, 0.82, 0.165, 1);
}

header #navbar a span {
  display: block;
  width: 3px;
  height: 25px;
  background: #fff;
  margin: 4px 0;
  transition: all 0.3s ease-in-out;
}

header #navbar a.active {
  color: #fff;
}

header #navbar a:hover {
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
}

/* Open Menu Button */
.openmenu {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  cursor: pointer;
  background: transparent;
  border: none;
  padding: 10px;
}

.openmenu span {
  display: block;
  width: 25px;
  height: 3px;
  background: #fff;
  margin: 4px 0;
  transition: all 0.3s ease-in-out;
}

/* Footer */
footer {
  position: relative;
  bottom: 0px;
  text-align: center;
  padding: 20px 0;
  width: 100vw;
  background-color: rgba(51, 51, 51, 0.8);
  color: #fff;
  z-index: 9999;
}

.footer-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-content p {
  margin-left: 30px;
  text-align: left;
}

.footer-links {
  list-style-type: none;
  padding: 0;
  margin-right: 30px;
  display: flex;
  justify-content: flex-end;
  gap: 20px;
}

.footer-links li {
  display: inline;
}

.footer-links li a {
  color: #fff;
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-links li a:hover {
  color: #ccc;
}

/* Responsive Coding */
@media (max-width: 864px) {

  /* Responsive Footer */
  .footer-content {
    flex-direction: column;
    align-items: center;
  }

  .footer-links {
    justify-content: center;
    margin: 0;
  }

  .footer-content p {
    margin: 0;
  }
}

@media (min-width: 641px) {
  header #navbar .openmenu {
    display: none;
  }
}

@media (max-width: 640px) {

  /* Responsive Header */
  header #navbar {
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    padding: 10px;
    margin: 20px 0;
    /* Adjust margin for mobile view */
  }

  header #navbar a {
    display: none;
  }

  header #navbar .openmenu {
    display: flex;
  }

  header #navbar.menuopen a {
    display: block;
    font-size: 14px;
    padding: 8px 15px;
  }

  header #navbar a span {
    width: 100px;
    height: 3px;
  }

  section h1 {
    font-size: 60px;
  }

  /* Responsive Footer */
  .footer-content p {
    font-size: 14px;
  }
}